<%= form_for @adopter, html: { class: 'form-horizontal edit-pet-choices'} do |f| %>
  <table class="table table-striped table-bordered table-condensed">
    <tr>
      <th>Pet Type (set to Dog if they have adopted both)</th>
      <td>
        <div class="pet-choices-read-only"><%= f.object.dog_or_cat%></div>
        <div class="pet-choices-editable">
          <%= f.select :dog_or_cat, options_for_select([['Dog'], ['Cat']], f.object.dog_or_cat), include_blank: true %>
        </div>
      </td>
    </tr>
    <tr>
      <th>Pet Selections</th>
      <td>
        <div class="pet-choices-read-only"><%= f.object.dog_name %></div>
        <div class="pet-choices-editable"><%= f.text_area :dog_name, value: f.object.dog_name, rows: 5, cols: 40 %></div>
      </td>
    </tr>
    <tr>
      <th>Pet Requirements</th>
      <td>
        <div class="pet-choices-read-only"><%= f.object.dog_reqs %></div>
        <div class="pet-choices-editable"><%= f.text_area :dog_reqs, value: f.object.dog_reqs, rows: 4, cols: 40 %></div>
      </td>
    </tr>
  </table>
  <p>
    <a id="toggle-edit-pet-choices" class="btn btn-primary">Edit Pet Choices</a>
    <%= f.submit "Save Pet Choices", class: "btn pet-choices-save", disabled: "disabled" %>
  </p>
<% end %>
