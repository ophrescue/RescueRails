
<ul>
  <% if @user.admin? %>
    <li>Can Admin System</li>
  <% end %>

  <% if @user.edit_all_adopters? %>
    <li>Can Process All Applications</li>
  <% end %>

  <% if @user.edit_my_adopters? %>
    <li>Can be Assigned Adoption Applications</li>
  <% end %>

  <% if @user.complete_adopters? %>
    <li>Can set Adoption Applications to completed status.</li>
  <% end %>

  <% if @user.ban_adopters? %>
    <li>Can update the banned adopters list</li>
  <% end %>

  <% if @user.edit_events? %>
    <li>Can create and edit events</li>
  <% end %>

  <% if @user.add_dogs?%>
    <li>Can add dogs</li>
  <% end %>

  <% if @user.medical_behavior_permission? %>
    <li>Can manage medical and behavior summaries</li>
  <% end %>

  <% if @user.edit_dogs?%>
    <li>Can edit all dogs</li>
  <% else %>
    <li>Can only edit dogs they are fostering</li>
  <% end %>

  <% if @user.is_foster? %>
    <li>Is a Foster</li>
  <% end %>

  <% if @user.foster_mentor? %>
    <li>Foster Mentor</li>
  <% end %>

  <% if @user.dl_resources? %>
    <li>Can Download Staff Resources</li>
  <% end %>

  <% if @user.dl_locked_resources? %>
    <li>Can Download Restricted Staff Resources</li>
  <% end %>

  <% if @user.active? %>
    <li><span class="badge badge-success">Active Volunteer</span></li>
  <% else %>
    <li><span class="badge badge-warning">Inactive Volunteer</span></li>
  <% end %>

  <% if @user.locked? %>
    <li><span class="badge badge-danger">Account Locked</span></li>
  <% else %>
    <li><span class="badge badge-success">Account Unlocked</span></li>
  <% end %>
</ul>
