<li>
  <div id='search-dropdown-heading'>
    Select a field to search in,<br/>
    and the value to match
  </div>
</li>
<li id='input-group-container'>
  <div class="input-group" id="search">
    <input type="text" class="form-control" id='search' name='filter_params[search]' autocomplete='off' value=<%=@filter_params[:search]%> >
    <div class="input-group-append" style="display:<%= search_string_present? ? 'inline' : 'none' %>">
      <button class="btn" type="button" id='search_reset_button'>
        <i class='fa fa-sm fa-times' id='search_reset_icon'></i>
      </button>
      <button class="btn btn-success" type="button" id='search_button'>
        <i class='fa fa-sm fa-search' id='search_icon'></i>
      </button>
    </div>
  </div>
</li>
