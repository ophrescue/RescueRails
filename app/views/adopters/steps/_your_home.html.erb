  <div class="form-group">
    <%= af.label :spouse_name, "Spouse/Partner's name", :class => "col-form-label" %>
    <div class="controls">
      <%= af.text_field :spouse_name, :class => "col-8 col-sm-4 form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= af.label :other_household_names, "Other Household Members", :class => "col-form-label" %>
    <div class="controls">
      <%= af.text_field :other_household_names, :class => "col-8 col-sm-4 form-control" %>
      <span class="form-text text-muted">Please include names and ages.</span>
    </div>
  </div>
  <div class="form-group">
    <%= af.label :how_did_you_hear, "How did you hear about us?", :class => "col-form-label" %>
    <div class="controls">
      <%= af.text_field :how_did_you_hear, :class => "col-8 col-sm-4 form-control" %>
      <span class="form-text text-muted">Google, Petfinder, etc.</span>
    </div>
  </div>
  <div class="form-group">
    <%= af.label :ready_to_adopt_dt, "How soon do you want to adopt?", :class => "col-form-label" %>
    <div class="controls">
      <%= af.text_field :ready_to_adopt_dt, :class => "required col-8 col-sm-4 form-control" %>
      <span class="form-text text-muted">Enter as YYYY-MM-DD</span>
    </div>
  </div>

  <div class="form-group birth-date">
    <%= af.label :birth_date, "Date of Birth", :class => "col-form-label" %>
    <div class="controls">
      <%= af.text_field :birth_date, :class => "required col-8 col-sm-4 form-control" %>
      <span class="form-text text-muted">Enter as YYYY-MM-DD</span>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <%= af.label :has_family_under_18, "Is there anyone living at your home under the age of 18?", :class => "col-form-label col-sm-3 pt-0" %>
      <div class= "controls col-sm-9">
        <div class="form-check form-check-inline">
          <label class="form-check-label">
            <%= af.radio_button :has_family_under_18, true, :class => "required" %>
            <span>Yes</span>
          </label>
        </div>
        <div class="form-check form-check-inline">
          <label class="form-check-label">
            <%= af.radio_button :has_family_under_18, false, :class => "required" %>
            <span>No</span>
          </label>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <%= af.label :house_type, "Do you rent or own your home?", :class => "col-form-label col-sm-3 pt-0" %>
      <div class="controls col-sm-9">
        <div class="form-check form-check-inline">
          <label>
            <%= af.radio_button :house_type, 'rent', :class => "link required residence-auth-pop" %>
            <span>Rent</span>
          </label class="form-check-label">
        </div>
        <div class="form-check form-check-inline">
          <label class="form-check-label">
            <%= af.radio_button :house_type, 'own', :class => "link required residence-auth-pop" %>
            <span>Own</span>
          </label>
        </div>
      </div>
    </div>
  </div>

<%# this needs to be %>
  <div class="form-group own-home-auth">
    <div class="form-check">
      <%= af.check_box :verify_home_auth, :class => "required form-check-input"  %>
      <%= af.label :verify_home_auth, "I authorize Operation Paws for Homes to verify my home ownership.", :class => "form-check-label" %>
    </div>
  </div>
</div>
