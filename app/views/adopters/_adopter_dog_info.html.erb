<%= form_for @adoption_app, html: { class: 'form-horizontal edit-info' } do |f| %>
  <table class="table table-striped table-bordered table-condensed">
    <tr>
      <th>Ready to Adopt</th>
      <td>
        <%= form_for @adoption_app, format: :json, html: { id: 'edit_adoption_date', class: 'form-horizontal' } do |af| %>
          <%= af.text_field :ready_to_adopt_dt %>
          <div id="status-icon" class=""></div>
        <% end %>
      </td>
    </tr>
    <tr>
      <th>Building Type</th>
      <td>
        <div class="info-read-only"><%= f.object.building_type %></div>
        <div class="info-editable"><%= f.select :building_type, options_for_select([["Apartment / Condo"], ["Townhouse"], ["Single Family"], ["Farm"]]), include_blank: true %></div>
      </td>
    </tr>
    <tr>
      <th>Fenced Yard?</th>
      <td>
        <div class="info-read-only"><%= f.object.fenced_yard ? "Yes" : "No" %></div>
        <div class="info-editable"><%= f.select :fenced_yard, options_for_select([["Yes"], ["No"]]), include_blank: true %></div>
      </td>
    </tr>
    <tr>
      <th>Pet exercise</th>
      <td><%= @adopter.adoption_app.dog_exercise %></td>
    </tr>
    <tr>
      <th>When away, pet will stay: </th>
      <td><%= @adopter.adoption_app.dog_stay_when_away %></td>
    </tr>
    <tr>
      <th>Dealing with pet and vacation</th>
      <td><%= @adopter.adoption_app.dog_vacation %></td>
    </tr>
    <tr>
      <th>Surrendered pet causes</th>
      <td><%= @adopter.adoption_app.surrender_pet_causes %></td>
    </tr>
    <tr>
      <th>Would you use training?</th>
      <td><%= @adopter.adoption_app.training_explain %></td>
    </tr>
    <tr>
      <th>Surrendered pets?</th>
      <td><%= @adopter.adoption_app.surrendered_pets %></td>
    </tr>
    <tr>
      <th>Why adopt</th>
      <td><%= @adopter.why_adopt %></td>
    </tr>
  </table>
  <p>
    <a id="toggle-edit-info" class="btn btn-primary">Edit Pet Info</a>
    <%= f.submit "Save Pet Info", class: "btn info-save", disabled: "disabled" %>
  </p>
<% end %>
