<div class="container-fluid ml-2">
  <h1 class="mt-3"><%=t '.title' %></h1>
  <p>
  <% if is_admin? %>
    <%= link_to "New Folder", new_folder_path, class: "btn btn-primary" %>
    
  <% end %>
  <%= link_to "All Folders", folders_path, class: 'btn btn-primary'%>
  </p>
  <%= form_tag folder_attachments_path, method: 'get', class: 'form-inline' do %>
    <%= text_field_tag :search, params[:search], class: "form-control col-10 col-sm-6 col-md-5 col-lg-3 mr-2", placeholder: 'Search file name or description' %>
    <%= submit_tag "Search", name: nil %>
  <% end %>


  <% unless @attachments.empty? %>
    <%= render 'attachment_table' %>
  <% else %>
    <h3 class="mt-3">No matching files found</h3>
  <% end %>
</div>
