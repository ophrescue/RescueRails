<%= form_for @adoption_app, html: { class: 'edit-vet' } do |f| %>
    <table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="col-md-4">Previously Owned Cats or Dogs?</th>
        <td>
          <div class='vet-read-only'><%= f.object.prev_pets_type %></div>
          <div class='vet-editable'><%= f.select :prev_pets_type, options_for_select([['Dogs'], ['Cats'], ['Both'], ['None']]), include_blank: true %></div>
        </td>
    </tr>
    <tr>
        <th class="col-md-4">Currently Own Cats or Dogs?</th>
        <td>
          <div class='vet-read-only'><%= f.object.current_pets_type %></div>
          <div class='vet-editable'><%= f.select :current_pets_type, options_for_select([['Dogs'], ['Cats'], ['Both'], ['None']]), include_blank: true %></div>
        </td>
    </tr>
    <tr>
        <th class="col-md-4">Pets</th>
        <td>
          <div class='vet-read-only'><%= f.object.current_pets %></div>
          <div class='vet-editable'><%= f.text_area :current_pets %></div>
        </td>
    </tr>
    <tr>
        <th class="col-md-4">Vet Info</th>
        <td>
          <div class='vet-read-only'><%= f.object.vet_info %></div>
          <div class='vet-editable'><%= f.text_area :vet_info %></div>
        </td>
    </tr>
    <tr>
        <th class="col-md-4">Are current pets fixed?</th>
        <td>
          <div class='vet-read-only'><%= f.object.current_pets_fixed %></div>
          <div class='vet-editable'>
            <label>
              <%= f.radio_button :current_pets_fixed, true %>
              <span>Yes</span>
            <label>
            <label>
              <%= f.radio_button :current_pets_fixed, false %>
              <span>No</span>
            </label>
            <label>
              <%= f.radio_button :current_pets_fixed, '' %>
              <span>N/A</span>
            </label>
          </div>
        </td>
    </tr>
    <tr>
        <th class="col-md-4">Why not fixed?</th>
        <td>
          <div class='vet-read-only'><%= f.object.why_not_fixed %></div>
          <div class='vet-editable'><%= f.text_area :why_not_fixed %></div>
        </td>
    </tr>
    <tr>
        <th class="col-md-4">Are current pets up to date on shots?</th>
        <td>
          <div class='vet-read-only'><%= f.object.current_pets_uptodate %></div>
          <div class='vet-editable'>
            <label>
              <%= f.radio_button :current_pets_uptodate, true %>
              <span>Yes</span>
            <label>
            <label>
              <%= f.radio_button :current_pets_uptodate, false %>
              <span>No</span>
            </label>
            <label>
              <%= f.radio_button :current_pets_uptodate, '' %>
              <span>N/A</span>
            </label>
          </div>
        </td>
    </tr>
        <th class="col-md-4">DHPP/DHLPP (dogs only)</th>
        <td>
          <div class='vet-read-only'><%= f.object.shot_dhpp_dhlpp %></div>
          <div class='vet-editable'>
            <label>
              <%= f.radio_button :shot_dhpp_dhlpp, true %>
              <span>Yes</span>
            <label>
            <label>
              <%= f.radio_button :shot_dhpp_dhlpp, false %>
              <span>No</span>
            </label>
            <label>
              <%= f.radio_button :shot_dhpp_dhlpp, '' %>
              <span>N/A</span>
            </label>
          </div>
        </td>
    </tr>
        <th class="col-md-4">FPV/FHV/FCV (cats only)</th>
        <td>
          <div class='vet-read-only'><%= f.object.shot_fpv_fhv_fcv %></div>
          <div class='vet-editable'>
            <label>
              <%= f.radio_button :shot_fpv_fhv_fcv, true %>
              <span>Yes</span>
            <label>
            <label>
              <%= f.radio_button :shot_fpv_fhv_fcv, false %>
              <span>No</span>
            </label>
            <label>
              <%= f.radio_button :shot_fpv_fhv_fcv, '' %>
              <span>N/A</span>
            </label>
          </div>
        </td>
    </tr>
        <th class="col-md-4">Rabies</th>
        <td>
          <div class='vet-read-only'><%= f.object.shot_rabies %></div>
          <div class='vet-editable'>
            <label>
              <%= f.radio_button :shot_rabies, true %>
              <span>Yes</span>
            <label>
            <label>
              <%= f.radio_button :shot_rabies, false %>
              <span>No</span>
            </label>
            <label>
              <%= f.radio_button :shot_rabies, '' %>
              <span>N/A</span>
            </label>
          </div>
        </td>
    </tr>
        <th class=col-md-4>Bordetella (dogs only)</th>
        <td>
          <div class='vet-read-only'><%= f.object.shot_bordetella %></div>
          <div class='vet-editable'>
            <label>
              <%= f.radio_button :shot_bordetella, true %>
              <span>Yes</span>
            <label>
            <label>
              <%= f.radio_button :shot_bordetella, false %>
              <span>No</span>
            </label>
            <label>
              <%= f.radio_button :shot_bordetella, '' %>
              <span>N/A</span>
            </label>
          </div>
        </td>
    </tr>
        <th class="col-md-4">Heartworm preventative (dogs only)</th>
        <td>
          <div class='vet-read-only'><%= f.object.shot_heartworm %></div>
          <div class='vet-editable'>
            <label>
              <%= f.radio_button :shot_heartworm, true %>
              <span>Yes</span>
            <label>
            <label>
              <%= f.radio_button :shot_heartworm, false %>
              <span>No</span>
            </label>
            <label>
              <%= f.radio_button :shot_heartworm, '' %>
              <span>N/A</span>
            </label>
          </div>
        </td>
    </tr>
        <th class="col-md-4">Flea/Tick preventative</th>
        <td>
          <div class='vet-read-only'><%= f.object.shot_flea_tick %></div>
          <div class='vet-editable'>
            <label>
              <%= f.radio_button :shot_flea_tick, true %>
              <span>Yes</span>
            <label>
            <label>
              <%= f.radio_button :shot_flea_tick, false %>
              <span>No</span>
            </label>
            <label>
              <%= f.radio_button :shot_flea_tick, '' %>
              <span>N/A</span>
            </label>
          </div>
        </td>
    </tr>
    <tr>
        <th class="col-md-4">Why not up to date</th>
        <td>
          <div class='vet-read-only'><%= f.object.current_pets_uptodate_why %></div>
          <div class='vet-editable'><%= f.text_field :current_pets_uptodate_why %></div>
        </td>
    </tr>
    </table>
    <p>
      <button id="toggle-edit-vet" class="btn btn-primary" type="button">Edit Vet Info</button>
      <%= f.submit "Save Vet Info", class: "btn btn-secondary vet-save", disabled: "disabled" %>
    </p>
<% end %>
