    <div class="row dog-hero">
        <div class="col-10">
            <div class="dog-hero-content">
                <%= image_tag "logo.png", alt: "OPH Logo" %>
                <h2 class="display-5">Operation Paws for Homes</h2>
                <p class="lead">We believe they all deserve a second chance.</p>
                    <span class="p-1"><a class="btn btn-primary btn-lg" id="cats_main" href="/cats" role="button">Cats</a></span>
                    <span class="p-1"><a class="btn btn-primary btn-lg" id="dogs_main" href="/dogs" role="button">Dogs</a></span>
                    <span class="p-1"><a class="btn btn-primary btn-lg" id="donate_main" href="/donate" role="button">Donate</a></span>
            </div>
        </div>
    </div>

<div class="row pt-3 bg-lightblue px-5">
    <div class="col-12 pb-5 text-center">
        <h2 class="text-center">Our Mission</h2>
        <h5 class="text-center">Creating a better world for companion animals and the community through rescue, rehabilitation, education, spay/neuter, and providing resources to underserved populations.</h5>
        <a href="http://greatnonprofits.org/reviews/operation-paws-for-homes/role:2/" target="_blank" rel="noopener">
            <%= image_tag "gnp-2023-award.png", alt: "2023 Top-rated nonprofits and charities" %>
