<% if @cat.foster %>
  <ul class='list-unstyled'>
    <li><%= link_to @cat.foster.name, user_path(@cat.foster) %></li>
    <li><%= @cat.foster.city %>, <%= @cat.foster.region %></li>
    <li><%= @cat.foster.share_info.present? ? @cat.foster.share_info : @cat.foster.email %></li>
  </ul>
<% else %>
  not assigned
<% end %>
