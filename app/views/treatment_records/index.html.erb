<div class="container">
    <div class="row">
        <div class="col-6-sm">
            <h3>Available Treatments</h3>
            <ul class="list-group list-group-flush">
            <%= render partial: "available_treatment", collection: @available_treatments,
                       as: :available_treatment  || "No treatments available"  %>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <h3>Treatment Records for <%= link_to @treatable.name, @treatable %> </h3>
            <%= link_to "PDF Export", polymorphic_path([@treatable, TreatmentRecord], format: :pdf), class: "btn btn-secondary" %>
        </div>
    </div>
    <div class="row">
        <table class="table table-sm table-striped table-bordered mt-3">
            <thead>
                <th> </th>
                <th>Administered Date</th>
                <th>Treatment</th>
                <th>Due Date</th>
                <th>Result</th>
                <th>Comments</th>
                <th></th>
            </thead>
            <tbody>
                <%= render @treatment_records  || "No Treatment Records"%>
            <tbody>
        </table>
    </div>
</div>
