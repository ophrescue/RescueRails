<% if @dog.foster %>
  <ul class='list-unstyled'>
    <li><%= link_to @dog.foster.name, user_path(@dog.foster) %></li>
    <li><%= @dog.foster.city %>, <%= @dog.foster.region %></li>
    <li><%= @dog.foster.share_info.present? ? @dog.foster.share_info : @dog.foster.email %></li>
  </ul>
<% else %>
  not assigned
<% end %>
