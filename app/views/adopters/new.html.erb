<div class="container-fluid">
  <h2 class="mt-3 ml-3">Adoption Application</h2>
</div>
<div class="container-fluid">
  <div class="col-md-8">
    <%= form_for(@adopter, :html=> { :class => "form-horizontal" }) do |f| %>
      <fieldset>
        <%= render 'shared/error_messages', :object => f.object %>

        <%= render 'adopters/steps/preq', :f => f %>

        <%= render 'adopters/steps/contact', :f => f %>

        <%= f.fields_for :adoption_app do |af| %>
          <%= render 'adopters/steps/your_home', :af => af %>
        <% end %>

        <%= f.fields_for :adoption_app do |af| %>

          <%= render 'adopters/steps/rental', :af => af %>
        <% end %>

        <%= render 'adopters/steps/dog', :f => f %>

        <%= f.fields_for :adoption_app do |af| %>

          <%= render 'adopters/steps/your_home2', :af => af %>

          <%= render 'adopters/steps/new_dog_q', :af => af %>

          <%= render 'adopters/steps/other_pets', :af => af %>

        <% end %>

        <div id="no_pets" class="step">
          <h4>References</h4>
          <p>Providing email addresses for your references can often speed up the review process.</p>

          <% @i = 1 %>
          <%= f.fields_for :references do |builder| %>
            <%= render 'adopters/steps/reference_fields', :rf => builder %>
          <% end %>
        </div>

        <div id="Navigation" class="form-actions well">
          <input class="btn btn-lg btn-light" id="back" value="Back" type="reset" />
          <%= f.submit "Submit", :id =>"next", :class => "btn btn-lg btn-primary", :disable_with => 'Saving...' %>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>
