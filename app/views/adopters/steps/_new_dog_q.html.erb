
    <div class="form-group">
      <%= af.label :training_explain, "Are you willing to seek professional training for any pet behavior issues? (Why/Why Not?)", :class => "col-form-label" %>
      <div class="controls">
        <%= af.text_area :training_explain,:class => "required form-control col-8 col-sm-6 col-md-4", :rows => "5" %>
      </div>
    </div>

    <div class="form-group">
      <%= af.label :surrender_pet_causes, "What would cause you to surrender or give up your new pet?", :class => "col-form-label" %>
      <div class="controls">
        <%= af.text_area :surrender_pet_causes, :class => "required form-control col-8 col-sm-6 col-md-4", :rows => "5" %>
        <span class="form-text text-muted">Moving, aggression toward children, adults or other pets, having a baby, etc.</span>
      </div>
    </div>

    <div class="form-group">
      <%= af.label :surrendered_pets, "Have you ever surrendered, sold or given away one of your pets?  This inlcudes giving a pet to a friend or family member.", :class => "col-form-label" %>
      <div class="controls">
        <%= af.text_area :surrendered_pets, :class => "required form-control col-8 col-sm-6 col-md-4", :rows => "5" %>
        <span class="form-text text-muted">If so, please explain in detail</span>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <%= af.label :have_pets, "Have you owned any dogs or cats over the past 5 years?  Or are there any other dogs or cats that reside in your home that belong to someone else?", :class => "col-form-label col-sm-3 pt-0" %>
        <div class="controls col-sm-9">
          <div class="form-check form-check-inline">
            <label>
              <%= af.radio_button :pets_branch, 'other_pets', :class => "required link" %>
              <span>Yes</span>
            </label>
          </div>
          <div class="form-check form-check-inline">
            <label>
              <%= af.radio_button :pets_branch, 'no_pets', :class => "link required" %>
              <span>No</span>
            </label>
          </div>
        </div>
      </div>
    </div>
</div>
