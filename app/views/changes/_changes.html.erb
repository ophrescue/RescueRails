<div class='tabbable'>
  <ul class="nav nav-tabs" role='tablist'>
    <li class='nav-item'>
      <a href="#all_table<%= device %>" data-toggle="tab" class='nav-link' role='tab'>All</a>
    </li>
    <li class='nav-item' role='tab'>
      <a href="#comment_table<%= device %>" data-toggle="tab" class='nav-link active' role='tab'>Comments</a>
    </li>
    <li class='nav-item' role='tab'>
      <a href="#history_table<%= device %>" data-toggle="tab" class='nav-link' role='tab'>History</a>
    </li>
  </ul>

  <div class="tab-content">
    <div class="tab-pane" id="all_table<%= device %>" role='tabpanel'>
      <%= render parent.comments_and_audits_and_associated_audits %>
    </div>
    <div class="tab-pane active" id="comment_table<%= device %>" role='tabpanel'>
      <%= render parent.persisted_comments %>
    </div>
    <div class="tab-pane" id="history_table<%= device %>" role='tabpanel'>
      <%= render parent.audits_and_associated_audits %>
    </div>
  </div>
</div>
