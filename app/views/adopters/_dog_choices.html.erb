<%= form_for @adopter, html: { class: 'edit-pet-choices'} do |f| %>
  <table class="table table-striped table-bordered table-sm">
    <tr>
      <th>Pet Type (set to Dog if they have adopted both)</th>
      <td>
        <div class="pet-choices-read-only"><%= f.object.dog_or_cat%></div>
        <div class="pet-choices-editable">
          <%= f.select :dog_or_cat, options_for_select([['Dog'], ['Cat']], f.object.dog_or_cat), include_blank: true %>
        </div>
      </td>
    </tr>
    <tr>
      <th>Pet Selections</th>
      <td>
        <div class="pet-choices-read-only"><%= f.object.dog_name %></div>
        <div class="pet-choices-editable"><%= f.text_area :dog_name, value: f.object.dog_name, rows: 5 %></div>
      </td>
    </tr>
    <tr>
      <th>Pet Requirements</th>
      <td>
        <div class="pet-choices-read-only"><%= f.object.dog_reqs %></div>
        <div class="pet-choices-editable"><%= f.text_area :dog_reqs, value: f.object.dog_reqs, rows: 4 %></div>
      </td>
    </tr>
    <tr>
      <th>Energy Level</th>
      <td>
        <div class="pet-choices-read-only"><%= render "energy_level/energy_level_icon", energy_level: f.object.energy_level, img_size: 250 %></div>
        <div class="pet-choices-editable">
          <%= f.select :energy_level, options_for_select(Adopter::ENERGY_LEVEL, f.object.energy_level), include_blank: true %>
        </div>
      </td>
    </tr>
  </table>
  <p>
    <button id="toggle-edit-pet-choices" class="btn btn-primary" type="button">Edit Pet Choices</a>
    <%= f.submit "Save Pet Choices", class: "btn btn-secondary pet-choices-save", disabled: "disabled" %>
  </p>
<% end %>
