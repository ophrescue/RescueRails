
<%= form_for @adoption_app, html: { class: 'edit-housing' } do |f| %>

  <table class="table table-striped table-bordered table-sm" data-house-type=<%=f.object.house_type%>>
    <tr>
      <th>Home ownership</th>
      <td>
        <div class='rent-read-only'>This applicant <%= f.object.house_type+'s' %> a home</div>
        <div class='rent-editable'>
        <%= f.label '' do %>
          <%= f.radio_button :house_type, 'own', class: 'radiobuttonown'%> Owns house
          <%= f.radio_button :house_type, 'rent', class: 'radiobuttonrent'%> Rents house
        <% end %>
        </div>
      </td>
    </tr>
  </table>
  <h4 class = 'show-rent-parameters'>Rental information</h6>
  <table class="table table-striped table-bordered table-sm show-rent-parameters">
    <tr>
      <th>Landlord Name</th>
      <td>
        <div class='rent-read-only'><%= f.object.landlord_name %></div>
        <div class='rent-editable'><%= f.text_field :landlord_name %></div>
      </td>
    </tr>
    <tr>
      <th>Landlord's Phone</th>
      <td>
        <div class='rent-read-only'><%= f.object.landlord_phone %></div>
        <div class='rent-editable'><%= f.text_field :landlord_phone %></div>
      </td>
    </tr>
    <tr>
      <th>Landlord's Email</th>
      <td>
        <% if f.object.landlord_email.present? %>
          <div class='rent-read-only'><%= mail_to f.object.landlord_email %></div>
        <% else %>
          <div class='rent-read-only'><%= f.object.landlord_email %></div>
        <% end %>
        <div class='rent-editable'><%= f.text_field :landlord_email %></div>
      </td>
    </tr>
    <tr>
      <th>Pet Restrictions at Rental</th>
      <td>
        <div class='rent-read-only'><%= f.object.rent_dog_restrictions %></div>
        <div class='rent-editable'><%= f.text_area :rent_dog_restrictions %></div>
      </td>
    </tr>
    <tr>
      <th>Expected Rental Costs</th>
      <td>
        <div class='rent-read-only'><%= f.object.rent_costs %></div>
        <div class='rent-editable'><%= f.text_area :rent_costs %></div>
      </td>
    </tr>
    <tr>
  </table>
  <p>
    <button id="toggle-edit-housing" class="btn btn-primary" type="button">Edit Housing Info</button>
    <%= f.submit "Save Housing Info", class: "btn btn-secondary housing-save", disabled: "disabled" %>
  </p>
<%end%>
