<div class="row line-1">
  <div class="col-4">
    <%= link_to volunteer_app.name, volunteer_app %>
    <ul>
      <% if volunteer_app.marketing_interest %>
        <li>Marketing/PR</li>
      <% end %>
      <% if volunteer_app.events_interest %>
      <li>Events</li>
      <% end %>
    <% if volunteer_app.fostering_interest %>
      <li>Fostering</li>
      <% if volunteer_app.volunteer_foster_app.can_foster_dogs %>
          <li>Dog Foster</li>
        <% end %>
        <% if volunteer_app.volunteer_foster_app.can_foster_cats %>
          <li>Cat Foster</li>
        <% end %>
    <% end %>
    <% if volunteer_app.training_interest %>
      <li>Training</li>
    <% end %>
    <% if volunteer_app.fundraising_interest %>
      <li>Fundraising</li>
    <% end %>
    <% if volunteer_app.transport_bb_interest %>
      <li>Transport and Boarding Buddies</li>
    <% end %>
    <% if volunteer_app.adoption_team_interest %>
      <li>Adoption Team</li>
    <% end %>
    <% if volunteer_app.admin_interest %>
      <li>Administrative</li>
    <% end %>
    </ul>
  </div>
  <div class="col-5 offset-1">
    Submitted <%= time_ago_in_words (volunteer_app.created_at) %> ago <br />
    Status: <%= volunteer_app.status.capitalize %> <br />
    <%= volunteer_app.city %>, <%= volunteer_app.region %>
  </div>
</div>
