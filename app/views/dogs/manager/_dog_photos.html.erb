<% if @dog.photos.empty? %>
  <span id='no_photos' class='col-12'><%= @dog.name %> has no photos</span>
<% end %>
<div class="col-12" id='photos_sort' data-update-url="<%= sort_photos_url %>">
  <%= f.fields_for :photos do |photo| %>
    <div class='photo row align-items-center' id="photo_<%= photo.object.id %>" data-index=<%= photo.index %>>
      <div class='col-6 col-sm-4 col-md-3'>
        <i class="fa fa-sort fa-3x sort-handle w-25"></i>
        <%= image_tag(photo.object.photo.url(:thumb), :class => "w-50") %>
      </div>
      <div class="col-2" id=<%= 'dog_photo_timestamp_' + photo.object.id.to_s %>>
        <%=  photo.object.created_at.strftime("%b %d, %Y %H:%M") unless photo.object.created_at.nil? %>
      </div>
      <div class='col-2 col-md-3'>
        <div class="form-check">
          <%= photo.check_box :is_private, class: "form-check-input" %>
          <%= photo.label :is_private, "Private Photo" %>
        </div>
      </div>
      <div class='col-2 col-md-3'>
        <div class="form-check">
          <%= photo.check_box :_destroy, class: "form-check-input" %>
          <%= photo.label :_destroy, "Delete Photo" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
